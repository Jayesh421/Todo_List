<!DOCTYPE html>
<html>
    <head>
        <title>To-Do List</title>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <div class="box">
            <h1>Todo list</h1>
        </div>
        <div class="box">
            <% for(var i = 0 ; i < dayej.length ; i++){%>
                <div class="items">
                    <input type="checkbox">
                    <p><%= dayej[i].name %></p>
                </div>
            <% } %>

            <form action="/" method="POST">
                <input type="text" name="ele1" placeholder="Enter the task">
                <button type="submit">+</button>
            </form>
        </div>
    </body>
</html>